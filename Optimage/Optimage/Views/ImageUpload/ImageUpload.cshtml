@using Optimage.Models;
@model ImagesModel;

<form method="post" enctype="multipart/form-data" asp-controller="ImageUpload" asp-action="Index">
    <div class="upload-form">
        <div class ="upload-form__file">
            <input type="file" name="uploadedImage" />
        </div>
        <div class="upload-form__submit">
            <input type="submit" value="Upload Image" />
        </div>
        <div class="upload-form__message">
            @Html.Raw(ViewBag.Message)
        </div>
    </div>

    <div class="file-table">
        <table>
            <tr>
                <th>File Name</th>
                <th>Link</th>
            </tr>
            @foreach (string imageName in Model.Names)
            {
                <tr>
                    <td>@imageName </td>
                    <td>@Html.ActionLink("Download", "Download", new { ImageName = @imageName }) </td>
                </tr>
            }
        </table>
    </div>
</form>