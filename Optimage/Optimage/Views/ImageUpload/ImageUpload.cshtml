@{
    Layout = null;
}

@using Optimage.Models;
@model ImagesModel;

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/main.css" />
    <script src="/js/ImageUploadScript.js"></script>
</head>
<body>
    <form id="upload-image-form" method="post" enctype="multipart/form-data" asp-controller="ImageUpload" asp-action="Index">
        <div class="upload-form">
            <div class="upload-form__file">
                <input type="file" name="uploadedImage" onchange="fileSelectedChanged(this)" />
            </div>
            <div class="upload-form__submit">
                <input id="submit-image-button" disabled="disabled" type="submit" value="Upload Image" />
            </div>
            <div class="upload-form__message">
                @Html.Raw(ViewBag.Message)
            </div>
        </div>

        <div class="file-table">
            <table>
                <tr>
                    <th>File Name</th>
                    <th>Link</th>
                </tr>
                @foreach (string imageName in Model.Names)
                {
                    <tr>
                        <td>@imageName </td>
                        <td>@Html.ActionLink("Download", "Download", new { ImageName = @imageName }) </td>
                    </tr>
                }
            </table>
        </div>
    </form>
</body>
</html>

